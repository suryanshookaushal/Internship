<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
	    NEW STUDENT
	</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>NAME</label>
			<input type="text" name="blog[title]" placeholder="Name of the student">
		</div>
		<div class="field">
			<label>IMAGE</label>
			<input type="text" name="blog[image]" placeholder="image">
		</div>
		<div class="field">
			<label>AGE</label>
			<input type="number" name="blog[age]" placeholder="age">
		</div>
		<div class="field">
			<label>STANDARD</label>
			<input type="text" name="blog[body]" placeholder="standard">
		</div>
	<button class="ui green big basic button">Submit</button>
	</form>
</div>

